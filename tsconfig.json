{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "lib": ["ES2015"],
    "module": "CommonJS",
    "noImplicitAny": false,
    "outDir": "lib",
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": false,
    "target": "ES5",
    "watch": true
  },
  "include": ["src"]
}